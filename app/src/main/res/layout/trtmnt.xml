<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:gravity="center"
    android:layout_marginHorizontal="30dp"
    android:background="#00C853"
    android:layout_marginVertical="20dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textSize="20dp"
        android:background="#ffffff"
        android:layout_marginHorizontal="3dp"
        android:textColor="#000000"
        android:layout_marginVertical="5dp"
        android:id="@+id/patientname22"
        android:gravity="center"
        android:layout_gravity="center"
        />
    <TextView
        android:textSize="20dp"
        android:background="#ffffff"
        android:layout_marginHorizontal="3dp"
        android:textColor="#000000"
        android:layout_marginVertical="5dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/patientage22"
        android:clickable="true"
        android:autoLink="phone"
        android:gravity="center"
        android:layout_gravity="center"
  />
    <TextView
        android:textSize="20dp"
        android:background="#ffffff"
        android:layout_marginHorizontal="3dp"
        android:textColor="#000000"
        android:layout_marginVertical="5dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/patientbloodpressure22"
        android:gravity="center"
        />
    <TextView
        android:textSize="20dp"
        android:background="#ffffff"
        android:layout_marginHorizontal="3dp"
        android:textColor="#000000"
        android:layout_marginVertical="5dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/patienttemp22"
        android:gravity="center"
        />

    <TextView
        android:textSize="20dp"
        android:background="#ffffff"
        android:layout_marginHorizontal="3dp"
        android:textColor="#000000"
        android:layout_marginVertical="5dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/patientdescription22"
        android:gravity="center"
        android:layout_gravity="center"
        />
    <EditText
        android:background="#E8EAF6"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/pescription"
        android:gravity="center"
        android:hint="Pescribe here"
        android:layout_marginVertical="5dp"
        android:inputType="textAutoComplete"
        android:layout_gravity="center"
        />
    <Button
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="Submit"
        android:textAllCaps="false"
        android:id="@+id/pbtn"
        />
</LinearLayout>